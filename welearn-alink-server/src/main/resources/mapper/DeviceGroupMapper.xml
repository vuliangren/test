  <select id="selectGroupUserIdByIotIdAndGroupType" resultType="string">
    SELECT rdgu.userId
    FROM device_group dg
    JOIN re_device_group_device rdgd ON rdgd.groupId = dg.id AND rdgd.iotId = #{iotId} AND rdgd.isEnable = TRUE
    JOIN re_device_group_user rdgu ON rdgu.groupId = dg.id AND rdgu.isEnable = TRUE
    WHERE dg.type = #{groupType} and rdgu.isEnable = TRUE
