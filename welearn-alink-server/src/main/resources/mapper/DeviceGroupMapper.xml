  </sql>

  <!-- ResultMap: 默认表结构 -->
  <resultMap id="resultMapDefault" type="com.welearn.entity.po.alink.DeviceGroup" >
    <!-- Comment: 主键 -->
    <id column="id" property="id"/>
    <!-- Comment: 创建时间 -->
    <result column="createdAt" property="createdAt"/>
    <!-- Comment: 更新时间 -->
    <result column="updatedAt" property="updatedAt"/>
    <!-- Comment: 是否可用：0-不可用，1-可用 -->
    <result column="isEnable" property="isEnable"/>
    <!-- Comment: 组名称 -->
    <result column="name" property="name"/>
    <!-- Comment: 组类型: 0-巡检组 1-处理组 2-监察组 -->
    <result column="type" property="type"/>
    <!-- Comment: 组描述 -->
    <result column="description" property="description"/>
  </resultMap>

  <!-- 按主键查询数据 -->
  <select id="selectByPK" resultType="com.welearn.entity.po.alink.DeviceGroup" parameterType="java.lang.String">
    SELECT
      <include refid="sqlColumns"/>
    FROM device_group
    WHERE id = #{id}
  </select>

  <!-- 按条件查询数据 -->
  <select id="selectByCondition" resultType="com.welearn.entity.po.alink.DeviceGroup" parameterType="com.welearn.entity.qo.alink.DeviceGroupQueryCondition" >
    SELECT
      dg.id,
      dg.createdAt,
      dg.updatedAt,
      dg.isEnable,
      dg.name,
      dg.type,
      dg.description
    FROM device_group dg
      <if test="userId != null" >
        join re_device_group_user rdgu on rdgu.isEnable = true and rdgu.groupId = dg.id and rdgu.userId = #{userId}
      </if>
      <if test="iotId != null" >
        join re_device_group_device rdgd on rdgd.isEnable = true and rdgd.groupId = dg.id and rdgd.iotId = #{iotId}
      </if>
      <where>
        <if test="id != null" >
          dg.id = #{id}
        </if>
        <if test="createdAt != null" >
          AND dg.createdAt = #{createdAt}
        </if>
        <if test="updatedAt != null" >
          AND dg.updatedAt = #{updatedAt}
        </if>
        <if test="isEnable != null" >
          AND dg.isEnable = #{isEnable}
        </if>
        <if test="name != null" >
          AND dg.name = #{name}
        </if>
        <if test="type != null" >
          AND dg.type = #{type}
        </if>
        <if test="description != null" >
          AND dg.description = #{description}
        </if>
        <!-- START USER DEFINED -->
        
        <!-- End USER DEFINED -->
      </where>
    ORDER BY dg.createdAt ASC, dg.updatedAt DESC
  </select>

  <!-- 查询所有数据 -->
  <select id="selectAll" resultType="com.welearn.entity.po.alink.DeviceGroup" >
    SELECT
      <include refid="sqlColumns"/>
    FROM device_group
  </select>

  <!-- 获取数据条数 -->
  <select id="countAll" resultType="java.lang.Integer" >
