      <if test="itemType != null" >
        #{itemType},
      </if>
      <if test="name != null" >
        #{name},
      </if>
      <if test="description != null" >
        #{description},
      </if>
    </trim>
  </insert>
  
  <!-- 根据主键删除 -->
  <delete id="deleteByPK" parameterType="java.lang.String" >
    DELETE FROM tag WHERE id = #{id}
  </delete>

  <!-- 删除全部数据 -->
  <delete id="deleteAll">
    DELETE FROM tag
  </delete>
  
  
  <!-- START USER DEFINED -->
  <select id="itemTags" resultType="com.welearn.entity.vo.response.common.TagInfo">
    select distinct t.*, rti.id as reTagItemId, rti.createdAt as reTagItemCreatedAt
    from tag t
    join re_tag_item rti on rti.tagId = t.id and rti.itemId = #{itemId} and rti.isEnable = true
    where t.isEnable = true
    order by rti.createdAt asc
  </select>
  <select id="itemIds" resultType="java.lang.String">
    select distinct rti.itemId
    from tag t
    join re_tag_item rti on rti.tagId = t.id and rti.isEnable = true
    where t.id in
      <foreach collection="tagIds" item="tagId" index="index" open="(" close=")" separator=",">
        #{tagId}
      </foreach>
      and t.isEnable = true
  </select>
</mapper>